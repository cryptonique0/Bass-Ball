{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolvePackageJsonExports": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "ignoreDeprecations": "6.0",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/app/*": [
        "./app/*"
      ],
      "@/components/*": [
        "./components/*"
      ],
      "@/hooks/*": [
        "./hooks/*"
      ],
      "@/lib/*": [
        "./lib/*"
      ],
      "@/services/*": [
        "./services/*"
      ]
    },
    "allowJs": true,
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "jest.config.js",
    "ALL_EVM_WALLETS_EXAMPLES.tsx",
    "BASE_ECOSYSTEM_EXAMPLES.tsx",
    "CROSS_CHAIN_SWAP_COMPONENTS.tsx",
    "GAME_ECONOMY_COMPONENTS.tsx",
    "GAS_OPTIMIZATION_COMPONENTS.tsx",
    "GOVERNANCE_DAO_COMPONENTS.tsx",
    "INTEGRATION_EXAMPLES.ts",
    "LIQUIDITY_POOL_COMPONENTS.tsx",
    "NFT_BRIDGE_COMPONENTS.tsx"
  ]
}
